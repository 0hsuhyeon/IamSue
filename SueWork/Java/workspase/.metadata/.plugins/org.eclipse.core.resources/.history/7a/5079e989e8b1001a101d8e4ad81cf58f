package kr.ac.kopo.comm;

import javax.servlet.ServletContextEvent;
import javax.servlet.ServletContextListener;
import javax.servlet.annotation.WebListener;

// 리스너(Listener) : 특정 사건(이벤트)이 발생하면, 자동으로 실행
//	- 요청객체, 세션객체, 서블릿 컨텍스트 객체가 생성 또는 소멸될 때
//	- 요청객체, 세션객체, 서블릿 컨텍스트 객체에 속성을 추가, 수정, 삭제할 때
//	- 기타 등등


// 리스너 등록방법
//	- 리스너 클래스에 @WebListener 사용
//	- web.xml에 등록

// @WebListener
public class InitListener implements ServletContextListener {

	@Override
	public void contextInitialized(ServletContextEvent sce) {
		// 서블릿 컨텍스트 객체가 처음 생성된 후 실행
		System.out.println("InitListener: contextInitialized 실행");
		
	}
	
	@Override
	public void contextDestroyed(ServletContextEvent sce) {
		// 서블릿 컨텍스트가 소멸되기 직전에 실행 
		System.out.println("InitListener: contextInitialized 실행");
		
	}
	
}
